<body>
  <header>
    <h1>Loja Estilo</h1>
    <input type="text" placeholder="Pesquisar produtos..." id="pesquisa" oninput="pesquisarProdutos()" />
    <button onclick="alternarCarrinho()">ðŸ›’</button>
  </header>

  <div class="inicio">
    <img src="img/logo.png" alt="Logo da Loja" />
    <h2>InÃ­cio</h2>
  </div>

  <div class="tabs" id="abas"></div>
  <div id="categoriaSelecionada"></div>

  <div id="carrinho">
    <h3>Carrinho</h3>
    <div id="itens-carrinho"></div>
    <button class="finalizar" onclick="finalizarCompra()">Finalizar Compra</button>
  </div>

  <script>
    const produtos = {
      "AcessÃ³rios": [
        { nome: "RelÃ³gio", preco: 120.00, imagem: "img/AcessÃ³rio-RelÃ³gio.png" },
        { nome: "Bracelete", preco: 90.00, imagem: "img/AcessÃ³rio-Bracelete.jpg" },
        { nome: "BonÃ©", preco: 45.00, imagem: "img/AcessÃ³rio-BonÃ©.jpg" },
        { nome: "Pulseira", preco: 70.00, imagem: "img/AcessÃ³rio-Pulseira.jpg" },
        { nome: "Colar", preco: 65.00, imagem: "img/AcessÃ³rio-Colar.jpg" }
      ],
      "CalÃ§as": [
        { nome: "CalÃ§a Tactel", preco: 140.00, imagem: "img/CalÃ§a-Tactel.jpeg" },
        { nome: "CalÃ§a Jogger", preco: 130.00, imagem: "img/CalÃ§a-Jogger.jpg" },
        { nome: "CalÃ§a Moletom", preco: 110.00, imagem: "img/CalÃ§a-Moletom.jpeg" },
        { nome: "CalÃ§a Cargo", preco: 150.00, imagem: "img/CalÃ§a-Cargo.jpg" },
        { nome: "CalÃ§a Jeans", preco: 160.00, imagem: "img/CalÃ§a-Jeans.jpeg" }
      ],
      "TÃªnis": [
        { nome: "TÃªnis New Balance", preco: 299.00, imagem: "img/TÃªnis-NewBalance.jpg" },
        { nome: "TÃªnis Allstar", preco: 220.00, imagem: "img/TÃªnis-Allstar.jpg" },
        { nome: "TÃªnis Nike", preco: 350.00, imagem: "img/TÃªnis-Nike.jpg" },
        { nome: "TÃªnis Polo", preco: 270.00, imagem: "img/TÃªnis-Polo.jpg" },
        { nome: "TÃªnis Lacoste", preco: 390.00, imagem: "img/TÃªnis-Lacoste.jpg" }
      ]
    };

    const carrinho = {};
    let categoriaAtual = "AcessÃ³rios";
    let termoPesquisa = "";

    function renderAbas() {
      const abas = document.getElementById("abas");
      abas.innerHTML = "";
      for (let cat in produtos) {
        const aba = document.createElement("div");
        aba.className = "tab" + (cat === categoriaAtual ? " active" : "");
        aba.innerText = cat;
        aba.onclick = () => {
          categoriaAtual = cat;
          termoPesquisa = "";
          document.getElementById("pesquisa").value = "";
          renderAbas();
          renderCategoria();
        };
        abas.appendChild(aba);
      }
    }

    function renderCategoria() {
      const container = document.getElementById("categoriaSelecionada");
      container.innerHTML = "";
      let lista = produtos[categoriaAtual];

      if (termoPesquisa) {
        lista = Object.values(produtos).flat().filter(p => p.nome.toLowerCase().includes(termoPesquisa.toLowerCase()));
        container.innerHTML = `<section class='categoria'><h2>Resultado da pesquisa</h2><div class='produtos'></div></section>`;
      } else {
        container.innerHTML = `<section class='categoria'><h2>${categoriaAtual}</h2><div class='produtos'></div></section>`;
      }

      const produtosContainer = container.querySelector(".produtos");
      lista.forEach(prod => {
        const div = document.createElement("div");
        div.className = "produto";
        div.innerHTML = `
          <img src="${prod.imagem}" alt="${prod.nome}" />
          <div>
            <p>${prod.nome}</p>
            <p>R$ ${prod.preco.toFixed(2)}</p>
            <button onclick="adicionarCarrinho('${prod.nome}')">Adicionar ao carrinho</button>
          </div>
        `;
        produtosContainer.appendChild(div);
      });
    }

    function pesquisarProdutos() {
      termoPesquisa = document.getElementById("pesquisa").value;
      renderCategoria();
    }

    function adicionarCarrinho(nome) {
      carrinho[nome] = (carrinho[nome] || 0) + 1;
      atualizarCarrinho();
    }

    function removerCarrinho(nome) {
      if (carrinho[nome] > 1) carrinho[nome]--;
      else delete carrinho[nome];
      atualizarCarrinho();
    }

    function atualizarCarrinho() {
      const div = document.getElementById('itens-carrinho');
      div.innerHTML = '';
      for (let nome in carrinho) {
        const item = document.createElement('div');
        item.className = 'item-carrinho';
        item.innerHTML = `
          <span>${nome}</span>
          <div>
            <button onclick="removerCarrinho('${nome}')">-</button>
            <span>${carrinho[nome]}</span>
            <button onclick="adicionarCarrinho('${nome}')">+</button>
          </div>
        `;
        div.appendChild(item);
      }
    }

    function alternarCarrinho() {
      document.getElementById('carrinho').classList.toggle('ativo');
    }

    function finalizarCompra() {
      if (Object.keys(carrinho).length === 0) {
        alert("O carrinho estÃ¡ vazio!");
      } else {
        alert("Compra finalizada com sucesso! Obrigado por comprar conosco.");
        for (let item in carrinho) delete carrinho[item];
        atualizarCarrinho();
        alternarCarrinho();
      }
    }

    renderAbas();
    renderCategoria();
  </script>
</body>
